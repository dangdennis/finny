# Use the official Faktory image as the base
FROM contribsys/faktory:latest

# Expose the Faktory port
EXPOSE 7419

# Set environment variables (adjust as needed)
ENV FAKTORY_PASSWORD=your_password_here
ENV FAKTORY_ENV=production

# The command to run Faktory
CMD ["/faktory", "-b", "0.0.0.0:7419", "-e", "production"]
